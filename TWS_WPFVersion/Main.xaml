<Page x:Class="TWS_WPFVersion.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TWS_WPFVersion"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Main">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0">
            <TabItem Header="MarketData">
                <Frame Name="MarketFrame"></Frame>
            </TabItem>
            <TabItem Header="Scanner">
                <Frame Name="ScannerFrame"></Frame>
            </TabItem>
        </TabControl>

        <TabControl Grid.Row="1">
            <TabItem Header="Market Data" >
                <Frame Name="DataFrame"></Frame>
            </TabItem>
            <TabItem Header="Deep Book" >
                <Frame Name="BookFrame"></Frame>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
